{
  "manifest_version": 3,
  "name": "Scroll Ease",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
     "32": "book-icon-32.png",
     "64": "book-icon-64.png" 
    }
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
  "background": {
    "scripts": ["background.js"]
  }
}
